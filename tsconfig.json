{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDirs": ["./drizzle", "./src"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "resolveJsonModule": true
  },
  "include": ["drizzle/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
